<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius = "20dp"
    android:layout_marginTop="115px"
    card_view:cardBackgroundColor="@android:color/holo_blue_bright"


    tools:context="com.example.kislay.mycalc.BasebuttonFragment">

        <TextView
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:id="@+id/diplay_text"
            android:layout_width="346dp"
            android:layout_height="match_parent"
            android:text="Default text"
            android:layout_gravity="center_horizontal|top" />

    <FrameLayout
        android:background="@android:color/holo_red_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom">
        <TableLayout
        android:id="@+id/base_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        >
        <TableRow android:id = "@+id/tr"
            >

            <Button
                style="@style/Widget.AppCompat.Button.Colored"

                android:width="20dp"
                android:id="@+id/a7"
                android:text="7"

                />
            <Button android:id="@+id/a8"
                android:text="8"
                android:width="20dp"/>
            <Button
                android:id="@+id/a9"
                android:text="9"
                android:width="20dp"/>


        </TableRow>
        <TableRow>

            <Button

                android:id="@+id/a4"
                android:text="4"

                />
            <Button android:id="@+id/a5"
                android:text="5"
                android:width="20dp"/>
            <Button
                android:id="@+id/a6"
                android:text="6"
                android:width="20dp"/>

        </TableRow>

        <TableRow>
            <Button

                android:id="@+id/a1"
                android:text="1"

                />
            <Button android:id="@+id/a2"
                android:text="2"
                android:width="20dp"/>
            <Button
                android:id="@+id/a3"
                android:text="3"
                android:width="20dp"/>

        </TableRow>
        <TableRow>
            <Button

                android:id="@+id/adot"
                android:text="."

                />
            <Button android:id="@+id/a0"
                android:text="0"
                android:width="20dp"/>
            <Button
                android:id="@+id/aequal"
                android:text="="
                android:width="20dp"/>


        </TableRow>
        <TableRow >

            <Button
                android:width="20dp"
                android:id="@+id/q"
                android:text="7"

                />
            <Button android:id="@+id/w"
                android:text="8"
                android:width="20dp"/>
            <Button
                android:id="@+id/r"
                android:text="9"
                android:width="20dp"/>


        </TableRow>
        <TableRow >

            <Button
                android:width="20dp"
                android:id="@+id/s"
                android:text="7"

                />
            <Button android:id="@+id/hy"
                android:text="8"
                android:width="20dp"/>
            <Button
                android:id="@+id/ju"
                android:text="9"
                android:width="20dp"/>


        </TableRow>

    </TableLayout>


    </FrameLayout>
</android.support.v7.widget.CardView>
